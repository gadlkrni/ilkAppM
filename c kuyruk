#include <stdio.h>
#include <locale.h>

#define MAX 100

struct kuyruk{
       int bas, son, deger[MAX];
};

void sifirla(struct kuyruk *a){

     a->son = -1;
     a->bas = 0;
     
}

void ekleme(struct kuyruk *a, int eklenecek){

     if ( a->son == MAX-1 ){
     
        printf("Dolu kuyruk");   
          
     }else{
          
          a->son++;
          a->deger[a->son] = eklenecek;
          
          printf("Eklendi!");
           
     }
     
}

void listele(struct kuyruk *a){

     int fora;

     for( fora = a->bas; fora < a->son + 1; fora++ ){
     
          printf("Sayılar: %d \t", a->deger[fora]);
          
     }
     
     printf("\n");
     
}

void sil(struct kuyruk *a){
 
    int silinen;
    silinen = a->deger[a->bas];
    
    
    int i;
    
    for ( i = 1; i <= a->son; i++ ){
    
        a->deger[i-1] = a->deger[i];
            
    }
    
    a->son--;
    printf("Silinen: %d \t", silinen);
    
}

int main(){
	
	setlocale(LC_ALL, "Turkish"); // Türkçe karakterleri destekler.
	
	struct kuyruk b;
	sifirla(&b);
	
	int secim;
	
	while(1){
    
        printf("Eklemek için 1: \n Silmek için 2: \n Listele 3: \n Çıkış: 4-----");
        scanf("%d", &secim);
        
        if (secim == 4){ break; }
        
        switch(secim){
        
             case 1: printf("\n\n Eklenecek değer: ");
             int eklenecekDeger;
             scanf("%d", &eklenecekDeger);
             ekleme(&b, eklenecekDeger);
             break;
             
             case 2: sil(&b);
             case 3: listele(&b);
                      
        }         
    
    }
	
	printf("\n\n"); system("pause");
	return 0;
	
}
